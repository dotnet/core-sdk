<Project>

  <PropertyGroup>
     <_BuildUnlessNoBuild Condition="'$(NoBuild)' != 'true'">Build</_BuildUnlessNoBuild>
  </PropertyGroup>

  <Target Name="GenerateInstallers"
          AfterTargets="Pack"
          DependsOnTargets="$(_BuildUnlessNoBuild);
                            GetCurrentRuntimeInformation;
                            GenerateMsis;
                            GeneratePkgs;
                            GenerateDebs;
                            GenerateRpms"
          />
</Project>
